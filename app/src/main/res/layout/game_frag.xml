<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.nickrooden.picknumber.presentation.GameViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/timer"
        android:text="@{viewModel.timerStr}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="05:06" />

    <TextView
        android:id="@+id/sum"
        app:numberToText="@{viewModel.question.sum}"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bgr_sum"
        android:gravity="center"
        android:padding="32dp"
        android:textColor="@color/black"
        android:textSize="64sp"
        android:textStyle="bold"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timer"
        tools:text="20" />

    <TextView
        android:id="@+id/visible_nbr"
        app:numberToText="@{viewModel.question.seeNumber}"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textSize="56sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/answer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sum"
        tools:text="7" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bgd_question_mark"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/question_mark"
        android:textSize="64sp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/visible_nbr"
        app:layout_constraintTop_toBottomOf="@+id/sum" />

    <TextView
        android:id="@+id/progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:setColorText="@{viewModel.enoughCountOfRightAnswers}"
        android:text="@{viewModel.progressAnswers}"
        tools:text="Right Answers %s (min Answers %s)"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visible_nbr" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:setColorBar="@{viewModel.enoughPercentOfRightAnswers}"
        android:progress="@{viewModel.percentOfRightAnswer}"
        android:secondaryProgress="@{viewModel.minPercentOfRightAnswer}"
        app:layout_constraintBottom_toTopOf="@+id/opt2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_text" />

    <TextView
        android:id="@+id/opt1"
        app:onOptClick="@{opt -> viewModel.chooseAnswer(opt)}"
        android:text="@{viewModel.question.optNumbers.get(0).toString()}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/opt4"
        app:layout_constraintEnd_toStartOf="@id/opt2"
        android:background="@android:color/holo_green_dark"
        tools:text="1"
        style="@style/opt_button"
        />

    <TextView
        android:id="@+id/opt2"
        app:onOptClick="@{opt -> viewModel.chooseAnswer(opt)}"
        android:text="@{viewModel.question.optNumbers.get(1).toString()}"
        style="@style/opt_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark"
        app:layout_constraintBottom_toTopOf="@id/opt5"
        app:layout_constraintEnd_toStartOf="@id/opt3"
        app:layout_constraintStart_toEndOf="@id/opt1"
        tools:ignore="TextContrastCheck"
        tools:text="2" />

    <TextView
        android:id="@+id/opt3"
        app:onOptClick="@{opt -> viewModel.chooseAnswer(opt)}"
        android:text="@{viewModel.question.optNumbers.get(2).toString()}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/opt6"
        app:layout_constraintStart_toEndOf="@id/opt2"
        android:background="@android:color/holo_blue_dark"
        tools:text="3"
        style="@style/opt_button"/>

    <TextView
        android:id="@+id/opt4"
        app:onOptClick="@{opt -> viewModel.chooseAnswer(opt)}"
        android:text="@{viewModel.question.optNumbers.get(3).toString()}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/opt5"
        android:background="@android:color/holo_red_dark"
        tools:text="4"
        style="@style/opt_button"/>

    <TextView
        android:id="@+id/opt5"
        app:onOptClick="@{opt -> viewModel.chooseAnswer(opt)}"
        android:text="@{viewModel.question.optNumbers.get(4).toString()}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/opt6"
        app:layout_constraintStart_toEndOf="@id/opt4"
        android:background="@android:color/holo_purple"
        tools:text="5"
        style="@style/opt_button"/>

    <TextView
        android:id="@+id/opt6"
        app:onOptClick="@{opt -> viewModel.chooseAnswer(opt)}"
        android:text="@{viewModel.question.optNumbers.get(5).toString()}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/opt5"
        android:background="@android:color/holo_red_light"
        tools:text="6"
        style="@style/opt_button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>